{% extends 'ApplicationFrontBundle:Common:base.html.twig' %}

{% block metatags %}
    <title>{{ page.metaTagTitle }}</title>
    <meta content="{{ page.metaTagDescription}}" name="description" />
    <meta content="{{ page.metaTagKeywords}}" name="keywords" />
    <meta content="{{ page.metaTagAuthor}}" name="author" />
    <meta content="{{ page.metaTagRobots}}" name="robots" />
{% endblock %}

{% block body %}
<div class="row flex-row align-items-center mb-auto">
    {{ render(controller('ApplicationFrontBundle:Default:getMenu', {'request' : app.request})) }}
    <div class="col-lg-10 col-md-10">
        <div class="row">
            <div class="col-lg-5 col-md-5 order-2 order-md-1">
                {{ form_start(messageForm) }}
                <div class="modal-header contact-form">
                    <h5 class="modal-title" id="exampleModalLabel">{% trans %}Форма обратной связи{% endtrans %}</h5>
                    </div>
                    <div class="modal-body contact-form">
                        <div class="form-group">
                            {{ form_widget(messageForm.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(messageForm.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(messageForm.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(messageForm.message) }}
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                      <button type="submit">{% trans %}Отправить{% endtrans %}</button>
                    </div>
                {{ form_end(messageForm) }}
            </div>
            <div class="col-lg-7 col-md-7 order-1">
                <div class="contact-info">
                    {{ page.pageContent | raw }}
                </div>
                <div class="site-header-contacts contact-form">
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><i class="fa fa-phone" aria-hidden="true"></i>{{ locale.settings.settingsPhone }}</li>
                        <li class="list-inline-item"><i class="fa fa-envelope" aria-hidden="true"></i>{{ locale.settings.settingsEmail }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% if page.blocks %}
    {% for block in page.blocks %}
        {{ block.blockContent | raw }}
    {% endfor %}
{% endif %}
{% endblock %}
