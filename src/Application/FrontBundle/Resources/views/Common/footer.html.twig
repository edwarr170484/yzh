<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {{ form_start(messageForm) }}
            <div class="modal-header justify-content-center">
                <h5 class="modal-title" id="exampleModalLabel">{% trans %}Оставить заявку{% endtrans %}</h5>
                <button type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    {{ form_widget(messageForm.name) }}
                </div>
                <div class="form-group">
                    {{ form_widget(messageForm.phone) }}
                </div>
                <div class="form-group">
                    {{ form_widget(messageForm.email) }}
                </div>
                <div class="form-group">
                    {{ form_widget(messageForm.message) }}
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="submit">{% trans %}Отправить{% endtrans %}</button>
            </div>
            {{ form_end(messageForm) }}  
        </div>
    </div>
</div>
{% for flashMessage in app.session.flashbag.get('front_notice') %}
<div class="modal fade" id="orderMessageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            {{ flashMessage | raw }}  
        </div>
    </div>
</div>
{% endfor %}