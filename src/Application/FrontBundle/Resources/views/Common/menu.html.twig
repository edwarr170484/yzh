<div class="col-lg-2 col-md-2 main-site-menu d-none d-sm-none d-md-block">
    {% if menu %}
        <ul class="list-unstyled">
            {% if menu.items %}
                {% for item in menu.items %}
                    {% if item.link %}
                        <li><a href="{{ item.link }}">{{ item.title }}</a></li>
                    {% else %}
                        <li><a href="{{ item.page.pageRoute }}">{{ item.title }}</a></li>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </ul>
    {% endif %}
</div>
