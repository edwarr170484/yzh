{% extends 'ApplicationBoardBundle:Common:base.html.twig' %}

{% block title %}{% trans %} Панель управления - Редактировать категорию портфолио{% endtrans %}{% endblock %}

{% form_theme categoryForm _self %}

{% block body %}
<main class="main">
    <!-- Breadcrumb -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('indexBoard') }}">{% trans %}Панель управления{% endtrans %}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('portfolioCategoryBoard') }}">{% trans %}Категории портфолио{% endtrans %}</a></li>
        <li class="breadcrumb-item active">{% trans %}Редактировать категорию{% endtrans %}</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu hidden-md-down">
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <a class="btn btn-secondary" href="{{ path('settingsBoard') }}"><i class="icon-settings"></i> &nbsp;{% trans %}Настройки{% endtrans %}</a>
            </div>
        </li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-edit"></i> {% trans %}Редактировать категорию{% endtrans %}
                        </div>
                        <div class="card-block">
                            {% for flashMessage in app.session.flashbag.get('notice') %}
                                <div class="notice-message">
                                    {{ flashMessage | raw }}
                                </div>                             
                            {% endfor %}
                            {{ form_start(categoryForm, {'attr' : {'class' : 'form-horizontal'}})}}
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#maininfo" role="tab" aria-controls="maininfo">
                                            <i class="fa fa-info"></i> {% trans %}Общая информация{% endtrans %}
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#meta" role="tab" aria-controls="meta">
                                            <i class="fa fa-file-code-o"></i> {% trans %}Мета-теги{% endtrans %}
                                        </a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="maininfo" role="tabpanel">
                                        <div class="form-group">
                                            <label class="col-md-12">{{ form_label(categoryForm.title)}}</label>
                                            <div class="col-md-12">
                                                {{ form_widget(categoryForm.title)}}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-12">{{ form_label(categoryForm.name)}}</label>
                                            <div class="input-group col-md-12">
                                                {{ form_widget(categoryForm.name)}}
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-primary" onclick="generateTranslit($('#portfolioCategory_title'),$('#portfolioCategory_name'))">Транслит</button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-12">{{ form_label(categoryForm.locale)}}</label>
                                            <div class="col-md-12">
                                                {{ form_widget(categoryForm.locale)}}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-12">{{ form_label(categoryForm.sortorder)}}</label>
                                            <div class="col-md-12">
                                                {{ form_widget(categoryForm.sortorder)}}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-12">{{ form_label(categoryForm.description)}}</label>
                                            <div class="col-md-12">
                                                {{ form_widget(categoryForm.description)}}
                                            </div>
                                        </div>
                                    </div>
                                    <div id="meta" class="tab-pane">
                                        <div class="form-group">
                                            <label>{{ form_label(categoryForm.metaTagTitle)}}</label>
                                                {{ form_widget(categoryForm.metaTagTitle)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(categoryForm.metaTagDescription)}}</label>
                                                {{ form_widget(categoryForm.metaTagDescription)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(categoryForm.metaTagKeywords)}}</label>
                                                {{ form_widget(categoryForm.metaTagKeywords)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(categoryForm.metaTagRobots)}}</label>
                                                {{ form_widget(categoryForm.metaTagRobots)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(categoryForm.metaTagAuthor)}}</label>
                                                {{ form_widget(categoryForm.metaTagAuthor)}}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary">{% trans %}Сохранить{% endtrans %}</button>
                                    <button type="submit" class="btn btn-default" onclick="$('#formExit').val(1);">{% trans %}Сохранить и выйти{% endtrans %}</button>
                                </div>
                                {{ form_widget(categoryForm.exit, {'id' : 'formExit'}) }}
                            {{ form_end(categoryForm)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>                  
</main>
{% endblock %} 